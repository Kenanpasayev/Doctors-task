@using WebApplication12.Models;
@model Doctors
<div class=" container">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input class="form-control" asp-for="Description">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImgFile" class="form-label">ImgFile</label>
            <input class="form-control" asp-for="ImgFile">
            <span asp-validation-for="ImgFile" style="color:red"></span>
        </div>
        <div class=" row">
            <img src="~/Upload/Doctor/@Model.ImgUrl" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>